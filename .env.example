# ===========================================
# Collectarr Configuration
# ===========================================
# Copy this file to .env and update the values

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Database (SQLite - path is relative to app root)
# For Docker: file:/app/data/collectarr.db
# For local: file:./data/collectarr.db
DATABASE_URL="file:./data/collectarr.db"

# JWT Secret (REQUIRED - generate a secure random string)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Encryption Key (REQUIRED - used to encrypt API keys in database)
# Must be at least 32 characters
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# ===========================================
# External API Keys (Optional)
# ===========================================

# MDBList API - for list imports (users can also add their own)
MDBLIST_API_KEY=

# TMDb API - for poster fallback when MDBList doesn't have them
# Get from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=

# ===========================================
# Trakt Integration (Optional)
# ===========================================
# Create app at: https://trakt.tv/oauth/applications

TRAKT_CLIENT_ID=
TRAKT_CLIENT_SECRET=
TRAKT_REDIRECT_URI=http://localhost:3000/api/v1/auth/trakt/callback
